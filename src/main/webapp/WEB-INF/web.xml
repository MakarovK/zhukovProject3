
<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>CurrencyServlet</servlet-name>
        <servlet-class>org.learnProject.servlets.CurrencyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExchangeRateServlet</servlet-name>
        <servlet-class>org.learnProject.servlets.ExchangeRateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CurrencyServlet</servlet-name>
        <url-pattern>/currencies/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CurrencyServlet</servlet-name>
        <url-pattern>/currencies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExchangeRateServlet</servlet-name>
        <url-pattern>/exchangeRates/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExchangeRateServlet</servlet-name>
        <url-pattern>/exchangeRates</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExchangeRateServlet</servlet-name>
        <url-pattern>/exchange</url-pattern>
    </servlet-mapping>

</web-app>